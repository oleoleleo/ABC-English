<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white">Sign up</h1>
        <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :name, class: 'text-white' %>
          <%= f.text_field :name, class: 'form-control', :placeholder => "ex. Taro Yamada" %>
        </div>
        <div class="form-group">
          <%= f.label :email, class: 'text-white' %>
          <%= f.text_field :email, class: 'form-control', :placeholder => "ex. hawaii@abc.com" %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: 'text-white' %>
          <%= f.password_field :password, class: 'form-control', :placeholder => "ex. abcd1234" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class: 'text-white' %>
          <%= f.password_field :password_confirmation, class: 'form-control', :placeholder => "re-enter your password" %>
        </div>

        <%= f.submit "REGISTER", class: 'btn-block btn-white' %>
      <% end %>
      <%= link_to 'Login>>', login_path, class: 'text-white' %>
    </div>
  </div>
</div>
</div>
